    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/cardview_Dental">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:background="#0dcaf0"
                android:scaleType="fitXY"
                android:src="@drawable/ic_dental" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dental Care"
                android:textColor="#BF1919"
                android:textSize="30sp"
                android:background="#000"
                android:layout_gravity="bottom"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/cardview_Gynac">

            <ImageView
                android:layout_width="match_parent"
                android:background="#0dcaf0"
                android:layout_height="189dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_gynac" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#000"
                android:text="Gynecologist"
                android:textColor="#BF1919"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cardview_Cardio">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:background="#0dcaf0"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_cardio" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cardiologist"
                    android:textColor="#BF1919"
                    android:textSize="30sp"
                    android:background="#000"
                    android:layout_gravity="bottom" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:id="@+id/cardview_Neuro">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_neuro" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neurologist"
                    android:textColor="#BF1919"
                    android:textSize="30sp"
                    android:background="#000"
                    android:layout_gravity="bottom" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>




</LinearLayout>


